class Kangaroo
  def Kangaroo.at_home?
    Die.roll
  end

  def hop! #take a random hop in one direction
     moves += 1
      r = moves.random
      if Die.roll == 'North'
        val1 += 1
      elsif Die.roll == 'East'
        val1 -= 1
      elsif Die.roll ==  'South'
        val2 += 1
      else Die.roll ==  'West'
        val2 -= 1
      end
    end

  def at_home?
    N == @dimension && N == Point.move!
    if @val1 == N && @val2 == N
      print('Skippy is home and the program has ended')
      true
    else
      false
    end
  end
end
