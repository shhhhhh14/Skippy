class Point
  require_relative 'grid'
  attr_accessor :val1, :val2, :East, :North, :South, :West
  def initialize
    @val1 = 0
    @val2 = 0
  end
  def move!(direction)
    case direction
    when North

    @val2 += 1

    when East

    @val1 += 1

    when South

    @val2 -= 1

    when West

    @val1 -= 1

  else

    @val2 +=1
    end
  end

    def print

      puts "Hopped to: (#{@val1}, #{@val2})"
    end
end

require_relative 'grid'
class Point

  def ==(other)

    super

    if @x == other.x && @y == other.y

      true

    else

      false

    end

  end





end
