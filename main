class Main
  def initial_position
    @val1 = 0 # starting x position
    @val2 = 0 # starting y position

    print ('Enter dimension of the Grid between 1 and 9')
     @dimension = gets.chomp

    if @dimension<1 || @dimension>9
    print('Please re-enter a dimension between 1 and 9: ')
    @dimension = gets.chomp
  end
  end
 end
